body { font-family: sans-serif; line-height: 1.6; margin: 0; background-color: #f4f4f4; }
header, footer { background-color: #333; color: #fff; padding: 1rem; text-align: center; }
nav a { color: #fff; margin: 0 15px; text-decoration: none; }
main { max-width: 800px; margin: 2rem auto; padding: 1rem; background-color: #fff; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
h1, h2, h3 { color: #333; }
code { background-color: #eee; padding: 2px 4px; border-radius: 3px; }
pre { background-color: #eee; padding: 1rem; border-radius: 5px; overflow-x: auto; }

/* New Header Styling */
.site-header {
    background-color: #2c3e50; /* Dark blue/grey */
    color: #ecf0f1; /* Light grey/white */
    padding: 2rem 1rem;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}
.header-content {
    max-width: 960px;
    margin: 0 auto;
}
.site-title {
    margin: 0;
    font-size: 2.5em;
    font-weight: bold;
    letter-spacing: 1px;
}
.site-nav {
    margin-top: 1rem;
}
.site-nav a {
    color: #ecf0f1;
    text-decoration: none;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border: 1px solid #ecf0f1;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
}
.site-nav a:hover {
    background-color: #ecf0f1;
    color: #2c3e50;
}